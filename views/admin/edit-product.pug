extends ../layouts/main-layout.pug
block content
  form.prodcut-form(action="/admin/edit-product", method="post")
    input(type="hidden" name="id" value=prod.id)
    include ../includes/token-input.pug
    .form-control
      label(for="title") 書名 
      input(
        type="text" 
        name="title" 
        id="title" 
        value=value.title
        class=errorParam == "title" ? 'invalid': ''
      )
    .form-control
      label(for="url") 圖片連結
      input(
        type="text"
        name="url"
        id="url"
        value=value.url
        class=errorParam == "url" ? 'invalid': ''
      )
    .form-control
      label(for="price") 換幣
      input(
        type="number" 
        name="price" 
        id="price" 
        value=value.price
        class=errorParam == "price" ? 'invalid': ''
      )
    .form-control
      label(for="description") 細節
      textarea(
        cols="30"
        rows="10"
        name="description"
        id="description"
        class=errorParam == "description" ? 'invalid': ''
      ) #{value.description}
    button(type="submit") 送出
