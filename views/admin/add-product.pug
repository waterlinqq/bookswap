extends ../layouts/main-layout.pug
block styles 
  link(rel="stylesheet", href="/css/add-product.css")
block content
  include ../includes/error-message.pug
  form.product-form(action="/admin/add-product", method="post", enctype="multipart/form-data")
    include ../includes/token-input.pug
    .form-control
      label.must-fill(for="title") 書名
      input(
        type="text"
        name="title"
        id="title"
        value=value.title
        class=errorParam == "title" ? 'invalid': ''
      )
    .form-control
      label.must-fill(for="author") 作者 
      input(
        type="text"
        name="author"
        id="author"
        value=value.author
        class=errorParam == "author" ? 'invalid': ''
      )
    .form-control
      label.must-fill(for="isbn") ISBN 
      input(
        type="text"
        name="isbn"
        id="isbn"
        value=value.isbn
        class=errorParam == "isbn" ? 'invalid': ''
      )
    .form-control
      label(for="category") 類別 
      select(
        name="category"
        id="category"
        value=value.category
        class=errorParam == "category" ? 'invalid': ''
      )
        option(value="0") 科幻
    .form-control
      label(for="images") 圖片
      input(
        multiple
        type="file"
        name="images"
        id="images"
        class=errorParam == "images" ? 'invalid': ''
      )
    .form-control
      label.must-fill(for="price") 換幣
      input(
        type="number"
        name="price"
        id="price"
        value=value.price
        class=errorParam == "price" ? 'invalid': ''
      )
    .form-control
      label(for="description") 細節
      textarea(
        cols="30"
        rows="10"
        name="description"
        id="description"
        class=errorParam == "description" ? 'invalid': ''
      ) #{value.description}
    button.btn(type="submit") 送出
  script(src="/js/add-product.js")