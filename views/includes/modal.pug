if(hint)
  div.modal.fade#modal(tabindex="-1" role="dialog") 
    div.modal-dialog(role="document")
      div.modal-content 
        div.modal-header 
          h5.modal-title 提示
          button.close(type="button")
            span &times;
        div.modal-body 
          p #{hint}
  button.d-none(
    type="button"
    data-toggle="modal"
    data-target="#modal"
  )
    img(src onerror="this.parentNode.click()")