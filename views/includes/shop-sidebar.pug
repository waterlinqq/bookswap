block sidebar
  .h-100.bg-white.border-right(style="box-shadow:0px 2px 5px rgba(0,0,0,0.2)")
    ul.nav.flex-column(style="width:200px")
      each category in ["文學","藝術","商業","語言","電腦","旅遊","生活風格","醫學保健","漫畫小說","政府考用","少兒親子"]
        li.nav-item
          a.nav-link(href="/shop/?category="+category class=query===category?'text-secondary':'') #{category}