extends ../layouts/main-layout.pug
block content 
  main 
    if prods.length
      .grid      
        each prod in prods  
          article.card.product-item
            header.card__header
              h1.product__title #{prod.title}
              .card__image 
                img(src=prod.url, width="200px", height="150px") 
              .card__content 
                h2.card__price #{prod.price}
                p.product__description #{prod.description} 
                .card__actions
                  button.btn 加入最愛
    else 
      h1 尚無書籍