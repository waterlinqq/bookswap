extends ../layouts/main-layout.pug
block styles 
  link(rel="stylesheet", href="/css/product.css")
  link(rel="stylesheet", href="/css/message.css")
block content 
  main
    section.product
      .image
        .image__thumb
          each url in JSON.parse(prod.url)
            img(src='/images/'+url alt=prod.title)
        .image__main
          img(src='/images/'+ JSON.parse(prod.url)[0] alt=prod.title)
      .info
        .info__title
          h1(title=prod.title) #{prod.title}
          span.info__category #{prod.category}
        hr
        p.info__item 換幣：#{prod.price}
        p.info__item 作者：#{prod.author}
        p.info__item ISBN：#{prod.isbn}
        p.info__item 賣家：#{seller.email}
        p.info__item 城市：#{seller.city}
        p.info__item 交易方式：#{JSON.parse(seller.delivery).join('')}
        p.info__description #{prod.description}
      .action
        a.btn(href="/transaction/order/"+prod.id) 提出兌換
        include ../includes/add-favorite.pug
    section
      include ../includes/message.pug